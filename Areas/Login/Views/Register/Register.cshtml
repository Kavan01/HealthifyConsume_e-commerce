                        <div class="d-flex align-items-center">
                            <div class="form-check">
                                <input type="checkbox" name="remember" id="remember" class="form-check-input" asp-for="IsActive">
                                <label for="remember" class="form-check-label" >
                                    Is Active
                                </label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" name="remember" id="remember" class="form-check-input" asp-for="IsAdmin">
                                <label for="remember" class="form-check-label" >
                                    Is Admin
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary ms-auto" >
                                Register
                            </button>
                        </div>
                    </form>
                    <div class="text-center mb-2 mt-3">&mdash; OR &mdash;</div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary icon-left" type="button">
                            <i class="fab fa-facebook"></i>
                            Sign up using Facebook
                        </button>
                        <button class="btn btn-danger icon-left" type="button">
                            <i class="fab fa-google"></i>
                            Sign up using Google
                        </button>
                    </div>
                </div>
                <div class="card-footer py-3 border-0">
                    <div class="text-center">
                        Already have an account? <a asp-area="Login" asp-controller="Register" asp-action="Login" class="text-dark">Login instead</a>
