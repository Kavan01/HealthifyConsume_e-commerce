                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Update it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Redirect to the Delete action with the EmpID parameter
                    window.location.href = '@Url.Action("Edit", "Product")' + '?ProductID=' + productId;
                }
            });
        }





